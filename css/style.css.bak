/* 
* Place css styles below.
*/
body{
    //background-color: #E9EAEB;
    background-color: #F0EBF4;
    color: #333;
    font: 1.4em Arial, Helvetica, sans-serif;
    letter-spacing: .2px;
}

/* 
* > Headings, Paragraphs and Links
*/

p
{
    padding-left: 10px;
    clear: both;
}

h1 ~ p
{
   padding-left: 0; 
}

div > p
{
    clear: none;
}

div > h2 ~ p
{
    clear: both;
    padding-left: 10px;
}

h1
{
    color: #26075A;
    padding-top: 20px;
}

h2{
    color: #26075A;
    border-left: 4px solid rgb(61, 61, 128);
    padding-left: 4px;
    float: left;
}

a :not(nav){
    color: #73b8a1;
    text-decoration: none;
}

a:hover{
    color: #9a9a9a;
}

/* 
* < Headings, Paragraphs and Links
*/

input {
    border: 1px solid #ccc;
    padding: 8px;
}

table {
    border: 1px solid #ddd;
    width: 100%;

    font-size: 12px;
    text-align: left;
}

table th {
    background: #eee;
    border: 1px solid #bbb;
    padding: 8px;
}

table tr td {
    border: 1px solid #ddd;
    padding: 6px;
}

table tr.alt td {
    background: #e2e2e2;
}

table tr:hover {
    background: #f0f0f0;
}

li {
    list-style-image: url("../images/arrow.png");
}

.personal_details {
    float: left; 
    width: 100%;
    height: 200px;
}

/* Framework elements */
.wrapper 
{
    margin: auto;
    width: 1100px;
}

.clear 
{
    clear: both;
}

.pagination li 
{
    display: inline;
    margin-right: 5px;
}

/* 
* > Header
*/

.header
{
    float: left; 
    width: 390px; 
    height: 80px; 
    margin-top: 10px; 
    font-family: Arial,Helvetica Neue,Helvetica,sans-serif;
}

.logo_header
{
    float: left; 
    font-size: 35px;
}
.text_header
{
    font-size: 48px;
    margin-top: 8px;
    color: #f0ebf4;
}

.call_header
{
    float: right; margin-top: 40px;
    color: #f0ebf4;
}

.header_top
{
    width: 100%; 
    height: 8em; 

    border-bottom: 1px solid grey;
    
    background: transparent linear-gradient(180deg, rgb(46, 46, 96), rgb(68, 68, 141)) repeat scroll 0% 0%;
    padding-top: 10px;
    
    position: absolute;
    left:0px;
    top: 0px;
}

.header_inner_top
{
    width: 1100px;
    margin: 0 auto;
}

.navigation
{ 
    float: left; 
    margin-top: 20px;
    margin-left: 40px;
    font-size: 1.2em;
    background-color: transparent;
}

nav ul {
 
    list-style: none;
    background-color: transparent;
    padding-left: 10px;
}
 
nav ul li 
{
    display: inline-block;
    float: left;

    margin: 0px 2px;
    padding: 8px;
    //background-color: #F0DB3B;
    //padding-top: 8px;
    
    background-color: rgb(38, 7, 90);
}

nav li a {
    //background-color: #F0DB3B;
    //padding: 8px;
    //color: #26075a;
    
    color: #f0ebf4;
    font-weight: 700;
    letter-spacing: .5px;
}

nav li a.active
{
    //background-color: blue;
    border-bottom: 2px solid #808080;
    //background-color: #F0DB3B;
    //padding: 8px;
}

#menu-icon 
{
    display: none;
}

/* 
* < Header
*/

.content-top
{
    padding: 0px 0px; 
    min-height: 480px; 
    font-size: 1.1em; 
    margin-top: 120px;
}
