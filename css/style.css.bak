/**
 * > Form styling
 */

.error 
{
    background: rgba(247,72,59,.1);
    border: 1px solid #f7483b;
    color: #444;

    max-width: 100%;
    padding: 20px;
    margin: 20px 0;

    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
    height: 50px;
}

.form_row
{
    width: 340px;
    height: 50px;
}

.left
{
    float: left;
    width: 55%;
    //margin-top: 6px;
}

.contact_left
{
    float: left;
    width: 65%;
}

.right
{
    float: right;
    width: 40%;  
    height: 100px;
}

.contact_right
{
    width: 35%;
    float: right;
    padding: 0 0 0 15px;       
}

.contact_address
{
    width: 40%;
}

/**
 * < Form styling
 */

.website-arrow
{
    float: left; 
    margin-top: 25px; 
    margin-left: 10px;
}

#image
{
    display: inline;
}

#inner
{
    height: auto;
    min-height: 470px;
}

#outer
{
    height: auto;
    min-height: 490px;
}

#what-we-do
{
    height: 220px;
    width: 550px;
}

#custom-websites
{
    width: 830px;
}

#outer-custom-websites
{
    width: 1100px; 
    height: 200px;
}

#contact-us
{
    min-height: 460px;
}

#outer-contact-us
{
    min-height: 470px; 
}

#about-us, #outer-about-us
{
    min-height: 35em;
}

.footer
{
    margin: auto;
    width: 1100px;
    height: 50px;
    margin-bottom: 10px; 
    padding-top: 20px; 
    border-top: 1px solid #617AE7;
    clear: both;
}

/*
 * > Project Popups
 */

.caption
{
    font-size: 12px;
    text-align: center;
}

.projects_tab
{
    margin: 0;
    padding: 0;
    padding-left: 4px; 
    margin: 6px 0;
    background-color: #337AB7; 
    border: 1px solid black; 
    border-radius: 6px;
    list-style:  outside none none;
}

#projects
{
    float: left; 
    display: block; 
    width: 200px; 
    height: 700px;
    padding-left: 0; 
    margin:0; 
    padding-right: 10px;
}

.project
{
    margin-left: 200px;
    border-left: 1px solid grey;
    padding: 5px;
}

/*
 * < Project Popups
 */

/** 
 * Slideshow style rules.
 */
#slideshow 
{
    margin:0 auto;
    width:380px;
    height:200px;
    //background:transparent url(../images/bg_slideshow.jpg) no-repeat 0 0;
    background-color: #3D3D80;
    position:relative;
}
#slideshow #slidesContainer 
{
    margin:0 auto;
    width:300px;
    height:200px;
    overflow:auto; /* allow scrollbar */
    position:relative;
}
#slideshow #slidesContainer .slide 
{
    margin:0 auto;
    width:440px; /* reduce by 20 pixels of #slidesContainer to avoid horizontal scroll */
    height:200px;
}

/** 
 * Slideshow controls style rules.
 */
.control 
{
    display:block;
    width:39px;
    height:263px;
    //text-indent:-10000px;
    position:absolute;
    cursor: pointer;
    color: white;
}
#leftControl 
{
    top:90px;
    left:13px;
    //background:transparent url(../images/control_left.jpg) no-repeat 0 0;
}
#rightControl 
{
    top:90px;
    right:-13px;
    //background:transparent url(../images/control_right.jpg) no-repeat 0 0;
}